FROM php:8.2-fpm
RUN apt-get update && apt-get install  -y --no-install-recommends \
vim \
libpng-dev \
libjpeg62-turbo-dev \
libfreetype6-dev \
libzip-dev \
libonig-dev \
libxml2-dev \
libicu-dev \
libcurl4-openssl-dev \
&& docker-php-ext-configure gd \
--with-freetype \
--with-jpeg \
&& docker-php-ext-install -j$(nproc) \
mysqli \
pdo \
pdo_mysql \
mbstring \
xml \
curl \
zip \
exif \
gd \
intl \
opcache \
&& docker-php-ext-enable opcache
ENTRYPOINT ["docker-php-entrypoint"] 
